#!/bin/bash
# Smak/Fuse - launch fuse commands using the version of libfuse here

SCRIPT_DIR=$(dirname $0)

FUSE_SO=$(readlink $SCRIPT_DIR/libfuse3.so)
FUSE_DIR=$(dirname $FUSE_SO)

export LD_LIBRARY_PATH=${FUSE_DIR}:{LD_LIBRARY_PATH}

#export LD_PRELOAD=${FUSE_DIR}/libfuse3.so

export FUSE_ENABLE_SOCKET=${SMAK_FUSE_DEBUG:-1}

exec "$@"
