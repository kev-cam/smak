#!/bin/bash
# Run all smak tests

failed=0
passed=0

for test in test_*.sh; do
    echo "Running $test..."
    if bash "$test" > /dev/null 2>&1; then
        echo "  ✓ PASSED"
        ((passed++))
    else
        echo "  ✗ FAILED"
        ((failed++))
    fi
done

echo ""
echo "Summary: $passed passed, $failed failed"
exit $failed
